{
  "name": "you-xo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-native": "^0.72.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.3.2",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-testing-library": "^6.2.0",
    "lint-staged": "^15.2.0",
    "husky": "^8.0.3"
  },
  "scripts": {
    "native": "cd apps/expo && bun run expo start",
    "web": "cd apps/expo && bun run expo start --web",
    "ios": "cd apps/expo && bun run ios",
    "android": "cd apps/expo && bun run android",
    "build": "bun run build:expo",
    "build:expo": "cd apps/expo && bun run build",
    "dev": "bun run native",
    "start": "bun run native",
    "install:clean": "bun install --frozen-lockfile",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "commit": "bun run git-cz",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "prepare": "husky install",
    "push-release": "git push --follow-tags origin main",
    "postinstall": "cd apps/expo && bun install"
  },
  "trustedDependencies": [
    "expo",
    "react-native"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "bun run lint -- --quiet --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "husky": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
